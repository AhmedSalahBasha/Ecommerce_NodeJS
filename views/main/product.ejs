<% layout('layout') -%>

<div class="container">
  <div class="col-md-2"></div>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading"><h2><%= product.name %></h2></div>
      <div class="panel-body">
        <div class="col-md-4">
          <div class="thumbnail">
            <img class="img-rounded img-responsive" src="<%= product.image %>" alt="">
          </div>
        </div>
        <div class="col-md-4">
          <h3>$<%= product.price %></h3>
          <p><%= product.description %></p>
          <form method="post">
            <div class="btn-group" role="group" aria-label="...">
              <input type="hidden" name="quantity" id="quantity" value="1">
              <button class="btn btn-default" type="button" id="minus">-</button>
              <button class="btn btn-default" type="button" id="total">1</button>
              <button class="btn btn-default" type="button" id="plus">+</button>
            </div>
            <div class="form-group">
              <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>">
              <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">
              <input class="form-control" type="text" name="item" value="<%= product.name %>">
              <input class="form-control" type="text" id="priceValue" name="priceValue" value="<%= product.price %>">
            </div>
              <% if (user) { %>
            <button class="btn btn-primary btn-lg" type="submit">Add to Cart</button>
              <% } else { %>
            <a href="/signup" class="btn btn-warning btn-lg">Signup First</a>
              <% } %>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>